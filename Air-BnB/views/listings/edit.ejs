<% layout("./layouts/boilerplate.ejs")%>


    <body>

        <div class="row">
            <div class="col-8 offset-2">
                <br><br>
                <h2>Edit your listing!</h2>
                <form action="/listings/<%=detaillist._id%>?_method=PATCH" method="post" novalidate
                    class="needs-validation">
                    <div class="mb-3"><label class="form-label" for="title">Title</label>
                        <input type="text" value="<%=detaillist.title%>" name="title" placeholder="Add a catchy title"
                            class="form-control" required>
                        <div class="valid-feedback">Title is good!</div>
                        <div class="invalid-feedback">Please enter the title!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea name="description" class="form-control" placeholder="description"
                            required><%=detaillist.description%></textarea>
                        <div class="valid-feedback"> good!</div>
                        <div class="invalid-feedback">Please enter a short Description!</div>
                    </div>
                    <div class="mb-3"><label class="form-label" for="image">Image</label>
                        <input type="text" value="<%=detaillist.image%>" name="image" class="form-control" placeholder="enter url/link" required>
                        <div class="valid-feedback"> good!</div>
                        <div class="invalid-feedback">Please enter image url!</div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4"><label class="form-label" for="price">Price</label>
                            <input type="number " value="<%=detaillist.price%>" name="price" class="form-control"
                                placeholder="1200" required>
                            <div class="valid-feedback">Good price!</div>
                            <div class="invalid-feedback">Please enter a valid price!</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label class="form-label" for="country">Country</label>
                            <input type="text " value="<%=detaillist.country%>" class="form-control" name="country"
                                placeholder="India" required>
                            <div class="invalid-feedback">Please enter a valid country!</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input type="text " value="<%=detaillist.location%>" class="form-control" name="location"
                            placeholder="Jaipur,Rajasthan" required>
                        <div class="invalid-feedback">Please enter a valid location!</div>
                    </div>

                    <br>
                    <button class="btn btn-dark add-btn">Edit</button>
                    <br><br>
                </form>
            </div>
        </div>
    </body>